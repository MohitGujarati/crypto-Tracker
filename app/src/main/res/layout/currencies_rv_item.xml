<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#80D8FF"
    android:backgroundTint="#F6F6F6F6"
    android:elevation="3dp"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:id="@+id/idRLcurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="#F6F6F6F6"
        android:elevation="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/imgeview"
                android:layout_width="120dp"
                android:layout_height="95dp"
                android:background="@drawable/iconimg" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/idTvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="4dp"
                    android:padding="3dp"
                    android:text="Name"
                    android:textColor="@color/blackshad_1"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/idTvSymbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTvname"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="4dp"
                    android:padding="3dp"
                    android:text="Symbol"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/idTvCurrencyRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idTvSymbol"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="4dp"
                    android:padding="3dp"
                    android:text="Price"
                    android:textColor="@color/blackshad_1"
                    android:textStyle="bold" />





            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <TextView
                android:id="@+id/idTvCurrencyTags"
                android:layout_width="121dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:text="Tags"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/idTvCurrencyTags"
                android:text="Chart" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>